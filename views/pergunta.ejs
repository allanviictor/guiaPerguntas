<%- include('partials/header.ejs') %>

<%- include('partials/nav-bar.ejs') %>

<div class="container">
    <div class="row">
        <div class="col-12 mt-3">
            <h1>pagina da pergunta</h1>

        </div>
        <div class="col-12 mt-3">
            <hr>
            <h3><%= pergunta.titulo %></h3> 
            <h5><%= pergunta.descricao %></h5> 
            <hr>
            <h6>Responda:</h6>
            <form method="POST" action="/responder">

                <textarea class="form-control" name="corpo" placeholder="Digite a resposta" id="" cols="30"></textarea>
                <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
                <button class="btn btn-primary mt-3">Responder</button>
            </form>
            <hr>
                <h3> Respostas</h3>
            <hr>
            <% resposta.forEach(item => { %>
                <h4>
                   <%= item.descricao %> 
                </h4>
            <%  }) %>
        </div>
    </div>

</div>


<%- include('partials/footer.ejs') %>